		avg+= process.get(i).getWaiting();
	}
	int avgres=0;
	for (int i = 0; i < process.size(); i++) {
		avgres+= process.get(i).getResponse();
	}
	double avgores=0;
	for (int i = 0; i < process.size(); i++) {
		avgores+= process.get(i).getWaiting()+(b[i]);
	}
	System.out.println("Avarage Waiting Time : " + avg/ process.size()+"\tAverage start TIme"+(avgres/process.size())+"\tAvaerage Respone "+avgores/process.size());
	
	
	
	
	
